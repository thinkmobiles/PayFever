<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ImageView
    android:id="@+id/ivLogo_FTAC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_avatar_contact"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/terms_and_conditions_text_margin"
            android:layout_marginRight="@dimen/terms_and_conditions_text_margin"
            android:textSize="@dimen/terms_and_conditions_text_size"
            android:text="@string/terms_and_conditions_text"/>

        <TextView
            android:id="@+id/tvAcceptTC_FTAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/terms_and_conditions_accept_padding"
            android:paddingTop="@dimen/terms_and_conditions_accept_padding"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/terms_and_conditions_accept_margin_height"
            android:layout_marginBottom="@dimen/terms_and_conditions_accept_margin_height"
            android:layout_marginLeft="@dimen/terms_and_conditions_accept_margin_width"
            android:layout_marginRight="@dimen/terms_and_conditions_accept_margin_width"
            android:gravity="center_horizontal"
            android:background="@drawable/invite_rounded_selector"
            android:text="Accept"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>

