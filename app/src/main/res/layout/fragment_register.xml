<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/register_edge_margin"
        android:layout_marginRight="@dimen/register_edge_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="PayFever"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_top_margin">

            <EditText
                android:id="@+id/etUserName_FR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name_FR"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etPhoneNumber_FR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/number_FR"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvRegister_FR"
            style="@style/ContactSkipInviteTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/register_top_margin"
            android:text="@string/register_FR"
            android:background="@drawable/invite_rounded_selector"
            tools:text="Register"/>

    </LinearLayout>

</ScrollView>