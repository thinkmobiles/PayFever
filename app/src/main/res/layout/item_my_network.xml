<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/half_simple_padding"
    android:paddingBottom="@dimen/half_simple_padding">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <include layout="@layout/item_list_contact" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLetter_IMN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/simple_margin"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tvLevelIndicator_IMN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginEnd="@dimen/simple_margin"
            android:layout_toLeftOf="@id/ivLetter_IMN"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="1st level" />

    </RelativeLayout>

</LinearLayout>