<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ListItemContactAvatar">
        <item name="android:layout_width">@dimen/contact_avatar_size</item>
        <item name="android:layout_height">@dimen/contact_avatar_size</item>
        <item name="android:layout_marginLeft">@dimen/contact_avatar_margin_left</item>
        <item name="android:layout_marginRight">@dimen/contact_avatar_margin_right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListItemStatus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/contact_avatar_margin_left</item>
        <item name="android:layout_marginRight">@dimen/contact_avatar_margin_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ListItemContactName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_item_text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemContactPhone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/app_item_text_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LinearLayoutSkipInvite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/app_linerlayout_contact_margin</item>
        <item name="android:layout_marginRight">@dimen/app_linerlayout_contact_margin</item>
    </style>

    <style name="ContactSkipInviteTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/app_invite_text_margin</item>
        <item name="android:textSize">@dimen/app_invite_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/app_invite_text_padding_height</item>
        <item name="android:paddingTop">@dimen/app_invite_text_padding_height</item>
        <item name="android:paddingLeft">@dimen/app_invite_text_padding_width</item>
        <item name="android:paddingRight">@dimen/app_invite_text_padding_width</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/skip_contact_color_dialog_button</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/skip_contact_color_dialog_background</item>
    </style>

    <style name="FooterRadioBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

</resources>
